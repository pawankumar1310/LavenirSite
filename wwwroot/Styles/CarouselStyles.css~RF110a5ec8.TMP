#dtpFromDate::-webkit-calendar-picker-indicator {
    border: 1px solid #3399FF;
    background-color: #3399FF;
    margin-right: 5px;
}

#dtpToDate::-webkit-calendar-picker-indicator {
    border: 1px solid #3399FF;
    background-color: #3399FF;
    margin-right: 5px;
}

@-webkit-keyframes fade {
    from {
            opacity: .4
        }

        to {
            opacity: 1
        }
    }

    @keyframes fade {
        from {
            opacity: .4
        }

        to {
            opacity: 1
        }
    }