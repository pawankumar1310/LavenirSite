/* Slideshow container */
.slideshow-container {
    max-width: 1000px;
    position: relative;
    margin: auto;
}

/* Hide the images by default */
.mySlides {
    display: none;
}

/* Next & previous buttons */
.prev, .next {
    cursor: pointer;
    top: 1px;
    width: 30px;
    background-color: #bbb;
    color: white;
    font-weight: bolder;
    font-size: 30px;
    transition: 0.6s ease;
    user-select: none;
}

.prev {
    left: 0;
    float: left;
    margin-right: 10px;
    margin-bottom: 20px;
    border-radius: 5px;
    text-align: center;
}

/* Position the "next button" to the right */
.next {
    right: 0;
    float: right;
    margin-left: 10px;
    margin-bottom: 20px;
    border-radius: 5px;
    text-align: center;
}

    /* On hover, add a black background color with a little bit see-through */
    .prev:hover, .next:hover {
        background-color: #bbb;
        color: white;
    }


.eventName {
    background-color: black;
    color: #3399FF;
    float: left;
    font-weight: bolder;
    font-size: 30px;
    font-style: italic;
}

.eventLink {
    background-color: black;
    color: #3399FF;
    float: right;
    font-weight: bolder;
    font-size: 30px;
    font-style: italic;
    text-decoration: underline;
    cursor: pointer;
}

    .eventLink:hover {
        background-color: black;
        color: #3399FF;
        float: right;
        font-weight: bolder;
        font-size: 30px;
        font-style: italic;
        cursor: pointer;
        text-decoration: underline;
    }

.eventAgenda {
    background-color: black;
    color: #3399FF;
    float: right;
    font-weight: bolder;
    font-size: 30px;
    font-style: italic;
    text-decoration: underline;
    cursor: pointer;
    margin-right: 20px;
}

    .eventAgenda:hover {
        background-color: black;
        color: #3399FF;
        float: right;
        font-weight: bolder;
        font-size: 30px;
        font-style: italic;
        cursor: pointer;
        text-decoration: underline;
    }

.disabledLink {
    background-color: black;
    color: #3399FF;
    float: right;
    font-weight: bolder;
    font-size: 30px;
    font-style: italic;
    cursor: not-allowed;
    text-decoration: underline;
}

    .disabledLink:hover {
        background-color: black;
        color: #3399FF;
        float: right;
        font-weight: bolder;
        font-size: 30px;
        font-style: italic;
        cursor: not-allowed;
        text-decoration: underline;
    }

/* Number text (1/3 etc) */
.numbertext {
    color: #f2f2f2;
    font-size: 12px;
    padding: 8px 12px;
    position: absolute;
    top: 0;
}

/* The dots/bullets/indicators */
.dot {
    cursor: pointer;
    height: 15px;
    width: 15px;
    margin: 0 2px;
    background-color: #bbb;
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.6s ease;
}

    .dot:hover {
        background-color: #3399FF;
    }

/* Fading animation */
.fade {
    -webkit-animation-name: fade;
    -webkit-animation-duration: 1.5s;
    animation-name: fade;
    animation-duration: 1.5s;
}

.schoolDropDown {
