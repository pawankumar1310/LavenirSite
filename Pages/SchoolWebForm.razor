    <link href="Styles/expandcollapse.css" rel="stylesheet" type="text/css" />
    <link href="Styles/default.css" rel="stylesheet" type="text/css" />
    <link href="Styles/icons.css" rel="stylesheet" type="text/css" /> *@
    <link href="Styles/HomeHeader.css" rel="stylesheet" type="text/css" />
    <link href="Styles/ScrollableTableStyles.css" rel="stylesheet" type="text/css" />
    <link href="Styles/CarouselStyles.css" rel="stylesheet" type="text/css" />
    <link href="Styles/BadgeCardStyles.css" rel="stylesheet" type="text/css" />
    <link href="Styles/AdminDashboardStyles.css" rel="stylesheet" type="text/css" />
 
